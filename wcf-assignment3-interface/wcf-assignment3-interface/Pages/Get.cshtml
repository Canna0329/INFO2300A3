@page
@model GetModel
@{
    ViewData["Title"] = "Get page";
}

<div class="text-center">
    <h1 class="display-4">Get</h1>
        <p><label asp-for="FlowerDetails.Name">Name</label>
        <input type="text" asp-for="FlowerDetails.Name" disabled />
        </p>
        <p><label asp-for="FlowerDetails.Colour">Colour</label>
        <input type="text" asp-for="FlowerDetails.Colour" disabled />
        </p>
        <p><label asp-for="FlowerDetails.Price">Price</label>
        <input type="number" min="0" step="0.01" asp-for="FlowerDetails.Price" disabled />
        </p>
        <p><label asp-for="FlowerDetails.Species">Species</label>
        <input type="text" asp-for="FlowerDetails.Species" disabled />
        </p>
        <p><label asp-for="FlowerDetails.Stock">Stock</label>
        <input type="number" min="0" asp-for="FlowerDetails.Stock" disabled />
        </p>
    <a class="navbar-brand" asp-area="" asp-page="/Edit">Edit Flower</a>
    <a class="navbar-brand" asp-area="" asp-page="/Delete">Delete Flower</a>
        <input type="hidden" asp-for="FlowerDetails.FlowerId" />
</div>
